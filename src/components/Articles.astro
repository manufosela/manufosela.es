---
import { articles } from '~/data/articles';
import ArticleTabs from '~/components/ArticleTabs.astro';

interface Props {
  language: string;
}

const { language } = Astro.props;
const articlesData = articles[language];
---

<ArticleTabs tabs={articlesData} />

<style>
  .nav {
    flex: 1 1 calc(50% - 1rem);
    box-sizing: border-box;
  }

  .nav h2 {
    margin-bottom: 0.5rem;
  }

  .nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .nav ul li {
    margin-bottom: 0.5rem;
  }

  .nav ul li a {
    transition: color 0.3s ease;
    color: var(--primary-color);
    font-size: 1.5rem;
    text-decoration: none;
  }

  .nav ul li a:hover {
    text-decoration: underline;
  }

  .year-title {
    color: var(--primary-color);
    font-size: 1.8rem;
    margin: 1.5rem 0 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--primary-color);
  }

  .title {
    font-weight: bold;
    color: var(--primary-color);
  }

  .textContent {
    font-size: 1.5rem;
    letter-spacing: 2px;
    white-space: pre-wrap;
    margin-bottom: 1rem;
  }

  @media screen and (max-width: 991px) {
    .title {
      display: block;
    }
    .textContent {
      font-size: 1rem;
    }
    .nav-container {
      flex-direction: column;
      margin-top: 3rem;
    }
    .nav {
      flex: 1 1 auto;
      width: 100%;
    }
    .nav ul li {
      margin-bottom: 0.5rem;
    }

    .nav ul li a {
      font-size: 1rem;
      text-decoration: none;
    }
    .year-title {
      font-size: 1.4rem;
    }
  }
</style>
