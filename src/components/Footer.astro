---
import { Footer as LocalFooter} from '~/data/config';
const currentYear = new Date().getFullYear()
---

<footer class="credit">
  <div class="librecounterLayer">
    <span class="yearauthor">
      &copy; {currentYear} {LocalFooter.name}
    </span>
  </div>
  <div class="dot">&middot;</div>
  <div class="librecounterLayer">
    <div>Inspired by the </div>
    <a href="https://astro-split.vercel.app" target="_blank" class="credit-links">Split Template</a>
  </div>
  <div class="librecounterLayer">
    by <a href="https://astro.build/" target="_blank" class="credit-links">Astro Build</a>
  </div>
  <div class="dot">&middot;</div>
  <div class="librecounterLayer">
    <a class="credit-links" href="https://librecounter.org/referer/show" target="_blank">
      <div>Libre Counter</div>
      <img class="librecounter" src="/api/counter.svg" alt="Libre Counter logo">
    </a>
  </div>
</footer>

<style>
  footer {
    display: flex;
    margin:0;
    z-index: 10;
  }

  .dot {
    margin: 0 0.5rem;
  }

  .credit {
    color: var(--color-text-light);
    font-size: 1rem;
  }
  .credit-links {
    font-size: 1rem;
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .librecounterLayer {
    display: flex;
    gap: 0.5rem;
  }
  .librecounter {
    height: 1.3rem;
    display: inline;
  }

  @media screen and (max-width: 991px) {
    footer {
      display: grid;
      grid-template-columns: auto auto auto;
      grid-template-rows: auto auto;
      align-items: center;
      gap: 0.5rem;
    }
    .credit {
      font-size: 1rem;
    }
    .yearauthor {
      display: block;
    }
    a {
      font-size: 0.7rem;
    }

    .librecounterLayer:nth-child(1) {
      grid-column: 1 / 2;
      grid-row: 1;
    }
    .dot:nth-child(2) {
      grid-column: 2 / 3;
      grid-row: 1;
    }
    .librecounterLayer:nth-child(5) {
      grid-column: 3 / 4;
      grid-row: 1;
    }
    .librecounterLayer:nth-child(3) {
      grid-column: 1 / 2;
      grid-row: 2;
    }
    .dot:nth-child(4) {
      grid-column: 2 / 3;
      grid-row: 2;
    }
    .librecounterLayer:nth-child(7) {
      grid-column: 3 / 4;
      grid-row: 2;
    }
  }
</style>
